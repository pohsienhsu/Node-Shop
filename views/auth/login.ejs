<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
          <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                  class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>" 
                  type="email" 
                  name="email" 
                  id="email" 
                  value="<%= prevInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                  class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>" 
                  type="password" 
                  name="password" 
                  id="password" >
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
            <div class="login-buttons">
              <button class="btn" type="submit">Login</button>
            </div>
        </form>
        <div class="auth-buttons">
          <a class="btn info" href="/signup">Sign up</a>
          <a class="btn info" href="/reset">Reset Password</a>
        </div>

    </main>
<%- include('../includes/end.ejs') %>